<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/easyLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:background="#61982D2D"
    tools:context=".EasyActivity">

    <TextView
        android:id="@+id/easyLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/easyLevel"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/easyCard1"
        android:layout_width="113dp"
        android:layout_height="181dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"
        android:onClick="onImageclicked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card" />

    <ImageView
        android:id="@+id/easyCard2"
        android:layout_width="113dp"
        android:layout_height="181dp"
        android:onClick="onImageclicked"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/easyCard1"
        app:layout_constraintTop_toTopOf="@+id/easyCard1"
        app:srcCompat="@drawable/card" />

    <ImageView
        android:id="@+id/easyCard3"
        android:layout_width="113dp"
        android:layout_height="181dp"
        android:layout_marginTop="30dp"
        android:onClick="onImageclicked"
        app:layout_constraintStart_toStartOf="@+id/easyCard1"
        app:layout_constraintTop_toBottomOf="@+id/easyCard1"
        app:srcCompat="@drawable/card" />

    <ImageView
        android:id="@+id/easyCard4"
        android:layout_width="113dp"
        android:layout_height="181dp"
        android:onClick="onImageclicked"
        app:layout_constraintEnd_toEndOf="@+id/easyCard2"
        app:layout_constraintTop_toTopOf="@+id/easyCard3"
        app:srcCompat="@drawable/card" />

    <TextView
        android:id="@+id/easyTries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/easyCard1"
        app:layout_constraintEnd_toEndOf="@+id/easyMoves"
        app:layout_constraintStart_toStartOf="@+id/easyMoves"
        app:layout_constraintTop_toBottomOf="@+id/easyMoves"
        app:layout_constraintVertical_bias="0.13" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/easyCard2"
        app:layout_constraintTop_toTopOf="@+id/easyMoves" />

    <TextView
        android:id="@+id/easyMoves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/easyMoves"
        app:layout_constraintBottom_toTopOf="@+id/easyCard1"
        app:layout_constraintStart_toStartOf="@+id/easyCard1"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>